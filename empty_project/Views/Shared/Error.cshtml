@if (ViewBag.ErrorTitle == null)
{
    <h3>
        An error occured while processing your request. The support
        team is notified and we are working on the fix
    </h3>
    <h5>Please contact us on hdmdtc@gmail.com</h5>
    <hr />
}
else
{
    <h1 class="text-danger font-weight-bold">@ViewBag.ErrorTitle</h1>
    <h6 class="alert alert-danger alert-dismissible">@ViewBag.ErrorMessage</h6>
}
