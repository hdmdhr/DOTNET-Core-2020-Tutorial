@model System.Collections.Generic.IEnumerable<Employee>

@{
    Layout = null;  // this overrides all _ViewStart.cshtml loading layout code
    ViewBag.Title = "Employee List";
}

<div>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Department</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Department</td>
                </tr>
            }
        </tbody>

    </table>
</div>

@section Scripts
{
    <script src="~/js/CustomScript.js"></script>
}
