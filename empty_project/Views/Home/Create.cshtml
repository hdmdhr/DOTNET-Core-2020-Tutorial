@model Employee

@{
    ViewBag.Title = "Create Employee";
}

<form asp-action="Create" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label text-sm-right"></label>
        <input asp-for="Name" class="col-sm-10 form-control" placeholder="Name" />
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label text-sm-right"></label>
        <input asp-for="Email" class="col-sm-10 form-control" placeholder="Email" />
    </div>
    <div class="form-group row">
        <label asp-for="Department" class="col-sm-2 col-form-label text-sm-right"></label>
        <select asp-for="Department" asp-items="Html.GetEnumSelectList<Departments>()" class="col-sm-10 custom-select"></select>
    </div>
    <div class="form-group row">
        <div class="col-sm-6 text-center">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>